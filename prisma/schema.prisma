// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Exposure {
  DIRECT
  INDIRECT
  MI
  OMBRE
}

enum Substrate {
  TERREAU
  TERRE
  PERLITE
  CAILLOUX
}

enum Environment {
  OUTDOOR
  INDOOR
}

enum Category {
  FLEUR
  BONSAI
  BUISSON
  ARBRE
  SUCCULENTE
  CACTUS
}

model User {
  id  String @id @default(uuid())
  email  String @unique
  name  String @unique
  password  String
  birthday DateTime?

  trackingSheet TrackingSheet[]

  userPlants UserPlant[]
  observations Observation[]
  comments Comment[]
}

model Plant {
  id  String  @id @default(uuid())
  image String
  name  String
  category Category
  watering  Float
  exposure  Exposure[]
  repotting Float
  minTemperature  Float
  maxTemperature  Float
  environment Environment

  family Family @relation(fields: [familyId], references: [id])
  familyId String

  mixes Mix[]
  userPlants UserPlant[]
  comments Comment[]
}

model UserPlant {
  id  String  @id @default(uuid())
  category Category
  image String?
  nickname String?
  birthday DateTime?
  watering Float?
  exposure Exposure?
  repotting Float?
  environment Environment?

  plant Plant? @relation(fields: [plantId], references: [id])
  plantId String?
  user User @relation(fields: [userId], references: [id])
  userId String
  mix Mix? @relation(fields: [mixId], references: [id])
  mixId String?
  observations Observation[]
  comments Comment[]
  trackingSheet TrackingSheet?
}

model Mix {
  id  String  @id @default(uuid())
  substrates Substrate[]

  plants Plant[]
  userPlants UserPlant[]
}

model Family {
  id String @id @default(uuid())
  name  String

  plants Plant[]
}

model Observation {
  id String @id @default(uuid())
  date DateTime @default(now())
  description String
  image String?
  helpCenter Boolean
  public Boolean

  user User @relation(fields: [userId], references: [id])
  userId String

  userPlant UserPlant @relation(fields: [userPlantId], references: [id])
  userPlantId String

  comments Comment[]
}

model TrackingSheet {
  id  String  @id @default(uuid())
  watering DateTime[]
  repotting DateTime[]
  pruning DateTime[]

  user User @relation(fields: [userId], references: [id])
  userId String

  userPlant UserPlant @relation(fields: [userPlantId], references: [id])
  userPlantId String @unique

  sizes Size[]
}

model Size {
  id  String  @id @default(uuid())
  date DateTime @default(now())
  size Float

  trackingSheet TrackingSheet @relation(fields: [trackingSheetId], references: [id])
  trackingSheetId String
}

model Comment {
  id String @id @default(uuid())
  text String
  date DateTime @default(now())
  likes Int @default(0)

  author User @relation(fields: [authorId], references: [id])
  authorId String

  observation Observation? @relation(fields: [observationId], references: [id])
  observationId String?

  userPlant UserPlant? @relation(fields: [userPlantId], references: [id])
  userPlantId String?

  plant Plant? @relation(fields: [plantId], references: [id])
  plantId String?
}